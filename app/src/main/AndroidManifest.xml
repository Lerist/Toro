<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="im.ene.lab.toro.sample">

  <!-- Play video from internet -->
  <uses-permission android:name="android.permission.INTERNET"/>

  <application
      android:allowBackup="false"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:name=".ToroSampleApp"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity android:name=".activity.HomeActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
        android:label="@string/activity_show_case"
        android:launchMode="singleTop"
        android:name=".activity.ShowCaseActivity"
        android:parentActivityName=".activity.HomeActivity"/>

    <activity
        android:label="@string/activity_youtube"
        android:launchMode="singleTop"
        android:name=".activity.MyYoutubeActivity">
    </activity>
  </application>

</manifest>
